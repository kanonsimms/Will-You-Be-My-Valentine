  <script>
    const noBtn = document.getElementById("noBtn");
    const yesBtn = document.getElementById("yesBtn");
    const btnArea = document.getElementById("btnArea");
    const overlay = document.getElementById("overlay");

    function clamp(n, min, max){ return Math.max(min, Math.min(max, n)); }

    function moveNoButtonAway(pointerX, pointerY){
      const areaRect = btnArea.getBoundingClientRect();
      const btnRect  = noBtn.getBoundingClientRect();

      // current position relative to area
      const currentLeft = parseFloat(noBtn.style.left || "150");
      const currentTop  = parseFloat(noBtn.style.top  || "18");

      // compute pointer position in area coords
      const px = pointerX - areaRect.left;
      const py = pointerY - areaRect.top;

      // decide direction away from pointer
      const dx = (currentLeft + btnRect.width/2) - px;
      const dy = (currentTop  + btnRect.height/2) - py;

      // push away (with a bit of randomness)
      const push = 90;
      let newLeft = currentLeft + Math.sign(dx || (Math.random()-0.5)) * push + (Math.random()*30 - 15);
      let newTop  = currentTop  + Math.sign(dy || (Math.random()-0.5)) * (push*0.6) + (Math.random()*22 - 11);

      // keep inside the area
      const maxLeft = areaRect.width  - btnRect.width  - 10;
      const maxTop  = areaRect.height - btnRect.height - 10;

      newLeft = clamp(newLeft, 10, maxLeft);
      newTop  = clamp(newTop,  10, maxTop);

      noBtn.style.left = newLeft + "px";
      noBtn.style.top  = newTop  + "px";
    }

    // Make "No" dodge mouse + touch
    btnArea.addEventListener("mousemove", (e) => {
      const r = noBtn.getBoundingClientRect();
      const near =
        e.clientX > r.left - 40 && e.clientX < r.right + 40 &&
        e.clientY > r.top  - 40 && e.clientY < r.bottom + 40;

      if(near) moveNoButtonAway(e.clientX, e.clientY);
    });

    noBtn.addEventListener("mouseenter", (e) => moveNoButtonAway(e.clientX, e.clientY));
    noBtn.addEventListener("click", (e) => {
      // even if they click it on mobile somehowâ€”nope ğŸ˜­
      e.preventDefault();
      moveNoButtonAway(e.clientX || 0, e.clientY || 0);
    });

    // Touch support (mobile)
    btnArea.addEventListener("touchstart", (e) => {
      const t = e.touches[0];
      moveNoButtonAway(t.clientX, t.clientY);
    }, {passive:true});

    yesBtn.addEventListener("click", () => {
      overlay.classList.add("show");
      // optional: tiny confetti-ish hearts burst
      for(let i=0;i<16;i++){
        const h = document.createElement("div");
        h.className="heart";
        h.textContent = ["ğŸ’—","ğŸ’–","ğŸ’˜","ğŸ’•"][Math.floor(Math.random()*4)];
        h.style.left = (45 + Math.random()*10) + "vw";
        h.style.animationDuration = (3.5 + Math.random()*2.5) + "s";
        h.style.opacity = .6;
        h.style.fontSize = (18 + Math.random()*18) + "px";
        document.body.appendChild(h);
        setTimeout(()=>h.remove(), 6000);
      }
    });
  </script>
